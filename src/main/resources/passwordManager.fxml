<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="View.PasswordManagerView"
            prefHeight="400.0" prefWidth="600.0">
    <VBox spacing="10">
        <HBox spacing="10">
            <Label text="Website: "/>
            <TextField fx:id="website"/>
        </HBox>

        <HBox spacing="10">
            <Label text="Username: "/>
            <TextField fx:id="username"/>
        </HBox>

        <HBox spacing="10">
            <Label text="Password: "/>
            <TextField fx:id="password"/>
        </HBox>

        <VBox spacing="15">
            <HBox spacing="15">
                <Button fx:id="addButton">Add +</Button>
            </HBox>
            <TableView fx:id="tableView"/>
        </VBox>
    </VBox>

</AnchorPane>
