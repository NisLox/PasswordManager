<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="View.AddUserView"
          alignment="center" hgap="10" vgap="10">
    <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>

    <Text text="Add User"
          GridPane.columnIndex="0" GridPane.rowIndex="0"
          GridPane.columnSpan="2"/>

    <Label GridPane.rowIndex="1" GridPane.columnIndex="0"> Name </Label>
    <Label GridPane.rowIndex="2" GridPane.columnIndex="0"> Password </Label>
    <TextField fx:id="user" GridPane.rowIndex="1" GridPane.columnIndex="1">  </TextField>
    <PasswordField fx:id="password" GridPane.rowIndex="2" GridPane.columnIndex="1"> </PasswordField>

    <HBox spacing="10" alignment="bottom_right"
          GridPane.columnIndex="1" GridPane.rowIndex="4">
        <Button fx:id="okButton" GridPane.rowIndex="3" GridPane.columnIndex="1">Ok</Button>
        <Button fx:id="cancelButton" GridPane.rowIndex="3" GridPane.columnIndex="2">Cancel</Button>
    </HBox>

</GridPane>
